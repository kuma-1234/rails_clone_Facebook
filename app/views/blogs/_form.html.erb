<%= form_with(model: @blog, local: true) do |form| %>
  
  <div class="blog_title">
    <%= form.label :title %>
    <%= form.text_field :title %>
  </div>

  <div class="blog_content">
    <%= form.label :content %>
    <%= form.text_field :content %>
  </div>

  <div class="blog_image">
    <%= form.label :image %>
    <%= form.file_field :image %>
  </div>

  <%= form.submit '投稿確認画面へ'%>

<% end %>